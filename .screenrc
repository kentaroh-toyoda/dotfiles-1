#バッファ行数
defscrollback 10000

#文字コード関連
defencoding utf-8
defutf8 on
defkanji utf-8
encoding utf-8 utf-8

#基本キー設定
escape ^tT

# windowslist表示
bind w windowlist -b

#ベル設定オフ
vbell off

#caption設定
hardstatus alwayslastline "%-w%{= wk}%n %t%{-}%+w %=%{gk}$USER@$HOSTNAME[$LANG] "

#ハングしたときに自動でデタッチ
autodetach on

#ログ設定
logfile "$HOME/.screen/screen-%Y%m%d-%n.log"
log on
deflog on

#起動時メッセージ
startup_message off

#背景色消去
defbce "on"

#シェルタイトル
shelltitle '% |zsh'

#TERM名設定
term xterm-color
